<% breadcrumb :edit_password %>

<h1 class="ui header"><%= t 'devise.passwords.edit.change_your_password' %></h1>

<%= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "ui form"} do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, t('devise.passwords.edit.new_password') %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t('devise.passwords.edit.confirm_new_password') %>
      <%= f.password_field :password_confirmation %>
    </div>

    <%= f.button "#{icon 'arrow right'} #{t 'devise.passwords.edit.change_my_password'}".html_safe, :class => "ui primary labeled icon button" %>
<% end %>
